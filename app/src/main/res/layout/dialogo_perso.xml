<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo3"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nombreDialogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Introduce nombre" />

    <EditText
        android:id="@+id/apellidoDialogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Introduce apellido" />

    <EditText
        android:id="@+id/edadDialogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Intro edad"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cancelDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />

        <Button
            android:id="@+id/okDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="Crear" />

    </LinearLayout>

</LinearLayout>